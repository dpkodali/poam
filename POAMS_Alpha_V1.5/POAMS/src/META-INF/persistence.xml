<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="POAMSPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>poams.Activity</class>
    <class>poams.Assignment</class>
    <class>poams.Documents</class>
    <class>poams.Note</class>
    <class>poams.Project</class>
    <class>poams.UserTable</class>
    <properties>
      <property name="toplink.jdbc.user" value=""/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:sqlite:POAMS.sqlite"/>
      <property name="toplink.jdbc.driver" value="org.sqlite.JDBC"/>
    </properties>
  </persistence-unit>
</persistence>
